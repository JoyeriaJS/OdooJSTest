<odoo>
    <record id="view_pos_discount_code_tree" model="ir.ui.view">
        <field name="name">pos.discount.code.tree</field>
        <field name="model">pos.discount.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="discount_type"/>
                <field name="discount_value"/>
                <field name="used"/>
                <field name="expired"/>
                <field name="fecha_creacion"/>
                <field name="fecha_uso"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_discount_code_form" model="ir.ui.view">
        <field name="name">pos.discount.code.form</field>
        <field name="model">pos.discount.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="discount_type"/>
                        <field name="discount_value"/>
                        <field name="used"/>
                        <field name="expired"/>
                        <field name="fecha_creacion"/>
                        <field name="fecha_uso"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_discount_code" model="ir.actions.act_window">
        <field name="name">Códigos de Descuento POS</field>
        <field name="res_model">pos.discount.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pos_discount_root"
              name="Códigos Descuento POS"
              parent="point_of_sale.menu_point_root"
              action="action_pos_discount_code"/>
</odoo>
