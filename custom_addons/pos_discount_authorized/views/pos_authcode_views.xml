<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_pos_authcode_tree" model="ir.ui.view">
        <field name="name">pos.authcode.tree</field>
        <field name="model">pos.discount.authcode</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="usado"/>
                <field name="expirado"/>
                <field name="fecha_creacion"/>
                <field name="fecha_uso"/>
                <field name="usuario_id"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_authcode_form" model="ir.ui.view">
        <field name="name">pos.authcode.form</field>
        <field name="model">pos.discount.authcode</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="codigo" readonly="1"/>
                        <field name="usado"/>
                        <field name="expirado"/>
                        <field name="fecha_creacion"/>
                        <field name="fecha_uso"/>
                        <field name="usuario_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_authcodes" model="ir.actions.act_window">
        <field name="name">Códigos POS</field>
        <field name="res_model">pos.discount.authcode</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pos_root" name="POS Seguridad" sequence="10"/>

    <menuitem id="menu_pos_authcodes"
              parent="menu_pos_root"
              name="Códigos de autorización"
              action="action_pos_authcodes"/>

</odoo>
