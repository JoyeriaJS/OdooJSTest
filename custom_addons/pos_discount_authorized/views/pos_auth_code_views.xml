<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_authcode_tree" model="ir.ui.view">
        <field name="name">pos.discount.authcode.tree</field>
        <field name="model">pos.discount.authcode</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="used"/>
                <field name="fecha_creacion"/>
                <field name="fecha_uso"/>
                <field name="usuario_id"/>
            </tree>
        </field>
    </record>

    <record id="view_pos_authcode_form" model="ir.ui.view">
        <field name="name">pos.discount.authcode.form</field>
        <field name="model">pos.discount.authcode</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="codigo" readonly="1"/>
                        <field name="used" readonly="1"/>
                        <field name="fecha_creacion" readonly="1"/>
                        <field name="fecha_uso" readonly="1"/>
                        <field name="usuario_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_auth_code" model="ir.actions.act_window">
        <field name="name">Códigos de Descuento POS</field>
        <field name="res_model">pos.discount.authcode</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pos_auth_code"
              name="Códigos de Descuento POS"
              parent="point_of_sale.menu_point_root"
              action="action_pos_auth_code"/>
</odoo>
