<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista formulario -->
    <record id="view_ai_engine_form" model="ir.ui.view">
        <field name="name">ai.business.engine.form</field>
        <field name="model">ai.business.engine</field>
        <field name="arch" type="xml">
            <form string="AI Business Engine" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="analysis_result" readonly="1" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="run_full_analysis"
                                type="object"
                                string="Ejecutar Análisis"
                                class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción tipo servidor -->
    <record id="action_ai_engine" model="ir.actions.server">
        <field name="name">AI Business Engine</field>
        <field name="model_id" ref="model_ai_business_engine"/>
        <field name="state">code</field>
        <field name="code">
action = model.action_open_dashboard()
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_ai_root" name="AI Intelligence" sequence="10"/>
    <menuitem id="menu_ai_engine"
              name="Motor de Decisiones"
              parent="menu_ai_root"
              action="action_ai_engine"/>

</odoo>