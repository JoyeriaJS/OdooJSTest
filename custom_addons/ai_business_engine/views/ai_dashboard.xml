<odoo>
    <record id="view_ai_engine_form" model="ir.ui.view">
        <field name="name">ai.engine.form</field>
        <field name="model">ai.business.engine</field>
        <field name="arch" type="xml">
            <form string="AI Business Engine">
                <sheet>
                    <group>
                        <field name="analysis_result" readonly="1" nolabel="1" widget="text"/>
                    </group>
                    <footer>
                        <button name="run_full_analysis"
                                type="object"
                                string="Ejecutar AnÃ¡lisis"
                                class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ai_engine" model="ir.actions.act_window">
        <field name="name">AI Business Engine</field>
        <field name="res_model">ai.business.engine</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>


    <menuitem id="menu_ai_root" name="AI Intelligence" sequence="10"/>
    <menuitem id="menu_ai_engine"
              name="Motor de Decisiones"
              parent="menu_ai_root"
              action="action_ai_engine"/>
</odoo>
