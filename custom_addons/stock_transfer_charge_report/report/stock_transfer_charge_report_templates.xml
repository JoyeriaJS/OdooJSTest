<odoo>
  <data>
    <template id="stock_transfer_charge">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <div class="page">
              <h2 style="text-align:center;">
                Traspaso: <t t-esc="o.name"/>
              </h2>
              <p><strong>Origen:</strong>  <t t-esc="o.location_id.display_name"/></p>
              <p><strong>Destino:</strong> <t t-esc="o.location_dest_id.display_name"/></p>
              <p><strong>Estado:</strong>  <t t-esc="o.state"/></p>
              <p><strong>Tipo:</strong>    <t t-esc="o.picking_type_code"/></p>

              <p style="margin-top:1em;">
                <strong>Valor total est√°ndar ($):</strong>
                <t t-esc="sum([ (ml.quantity or 0.0) * (ml.product_id.standard_price or 0.0) for ml in o.move_line_ids_without_package ])"/>
              </p>
              <p>
                <strong>Valor total interno ($):</strong>
                <t t-esc="sum([ (ml.quantity or 0.0) * precios_interno.get(ml.product_id.id, 0.0) for ml in o.move_line_ids_without_package ])"/>
              </p>

              <table class="table table-sm" border="1" cellpadding="3" t-if="o.move_line_ids_without_package">
                <thead>
                  <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>UoM</th>
                    <th>Precio Std.</th>
                    <th>Interno (CLP)</th>
                    <th>Subtotal Std.</th>
                    <th>Subtotal Int.</th>
                  </tr>
                </thead>
                <tbody>
                  <tr t-foreach="o.move_line_ids_without_package" t-as="ml">
                    <td><t t-esc="ml.product_id.display_name"/></td>
                    <td><t t-esc="ml.quantity or 0.0"/></td>
                    <td><t t-esc="ml.product_uom_id.name"/></td>
                    <td><t t-esc="ml.product_id.standard_price or 0.0"/></td>
                    <!--  precio interno desde el dict -->
                    <td><t t-esc="precios_interno.get(ml.product_id.id, 0.0)"/></td>
                    <td><t t-esc="(ml.quantity or 0.0) * (ml.product_id.standard_price or 0.0)"/></td>
                    <td><t t-esc="(ml.quantity or 0.0) * precios_interno.get(ml.product_id.id, 0.0)"/></td>
                  </tr>
                </tbody>
              </table>
              <t t-if="not o.move_line_ids_without_package">
                <p><em>No hay movimientos de productos en este traspaso.</em></p>
              </t>

            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>
