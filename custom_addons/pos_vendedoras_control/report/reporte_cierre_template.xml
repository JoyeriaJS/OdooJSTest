<odoo>
    <template id="reporte_cierre_template">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">

                    <div class="page">

                        <h2 style="text-align:center;">
                            REPORTE CIERRE DIARIO
                        </h2>

                        <br/>

                        <!-- DATOS GENERALES -->
                        <table style="width:100%; border-collapse: collapse;" border="1">
                            <tr>
                                <td><strong>Referencia:</strong></td>
                                <td><span t-esc="doc.name"/></td>
                                <td><strong>Fecha:</strong></td>
                                <td><span t-esc="doc.fecha"/></td>
                            </tr>
                            <tr>
                                <td><strong>Vendedora:</strong></td>
                                <td>
                                    <span t-esc="doc.user_id.name if doc.user_id else ''"/>
                                </td>
                                <td><strong>Estado:</strong></td>
                                <td><span t-esc="doc.state"/></td>
                            </tr>
                        </table>

                        <br/>

                        <!-- DETALLE -->
                        <h3>Detalle de Tickets</h3>

                        <table style="width:100%; border-collapse: collapse;" border="1">
                            <thead>
                                <tr>
                                    <th>Número Ticket</th>
                                    <th>Efectivo</th>
                                    <th>Transferencia</th>
                                    <th>Tarjeta</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-esc="line.pos_reference_input"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <span t-esc="line.efectivo"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <span t-esc="line.transferencia"/>
                                        </td>
                                        <td style="text-align:right;">
                                            <span t-esc="line.tarjeta"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <br/>

                        <!-- TOTALES -->
                        <h3>Totales</h3>

                        <table style="width:50%; border-collapse: collapse;" border="1">
                            <tr>
                                <td><strong>Total Efectivo</strong></td>
                                <td style="text-align:right;">
                                    <span t-esc="doc.total_efectivo"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Total Transferencia</strong></td>
                                <td style="text-align:right;">
                                    <span t-esc="doc.total_transferencia"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Total Tarjeta</strong></td>
                                <td style="text-align:right;">
                                    <span t-esc="doc.total_tarjeta"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Total Ventas</strong></td>
                                <td style="text-align:right;">
                                    <span t-esc="doc.total_ventas"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Gastos / Depósito</strong></td>
                                <td style="text-align:right;">
                                    <span t-esc="doc.gastos"/>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Venta Neta</strong></td>
                                <td style="text-align:right;">
                                    <span t-esc="doc.venta_neta"/>
                                </td>
                            </tr>
                        </table>

                    </div>

                </t>
            </t>
        </t>

    </template>
</odoo>
