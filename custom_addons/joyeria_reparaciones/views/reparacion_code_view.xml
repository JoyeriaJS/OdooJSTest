<odoo>
    <record id="view_reparacion_code_tree" model="ir.ui.view">
        <field name="name">reparacion.code.tree</field>
        <field name="model">joyeria.reparacion.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="fecha_generado"/>
                <field name="usado"/>
                <field name="reparacion_id"/>
            </tree>
        </field>
    </record>

    <record id="view_reparacion_code_form" model="ir.ui.view">
        <field name="name">reparacion.code.form</field>
        <field name="model">joyeria.reparacion.code</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="codigo"/>
                    <field name="fecha_generado"/>
                    <field name="usado"/>
                    <field name="reparacion_id"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_reparacion_code" model="ir.actions.act_window">
        <field name="name">Códigos Autorización</field>
        <field name="res_model">joyeria.reparacion.code</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú solo para administradores -->
    <menuitem id="menu_reparacion_code_root"
              name="Códigos de autorización"
              parent="menu_joyeria_root"
              action="action_reparacion_code"
              groups="base.group_system"/>
</odoo>
