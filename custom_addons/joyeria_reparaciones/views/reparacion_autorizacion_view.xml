<odoo>
    <record id="view_reparacion_form_autorizacion" model="ir.ui.view">
        <field name="name">joyeria.reparacion.form.autorizacion</field>
        <field name="model">joyeria.reparacion</field>
        <field name="inherit_id" ref="joyeria_reparaciones.view_joyeria_reparacion_form"/>

        <field name="arch" type="xml">

            <!-- Aquí insertamos el bloque antes del final del sheet -->
            <xpath expr="//sheet/group[last()]" position="after">
                <group string="Autorización (Reparaciones sin costo)">
                    <field name="codigo_ingresado"/>
                    <field name="codigo_autorizacion" groups="base.group_system"/>
                    <button name="action_generate_code"
                            type="object"
                            string="Generar código"
                            class="btn-primary"
                            groups="base.group_system"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
