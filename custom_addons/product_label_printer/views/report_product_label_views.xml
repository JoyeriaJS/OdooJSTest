<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record id="action_report_product_label_ring" model="ir.actions.report">
      <field name="name">Etiqueta Anillo 75,95x10,01mm</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_ring</field>
      <field name="report_file">product_label_printer.report_product_label_ring</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <template id="report_product_label_ring">
      <t t-call="web.html_container">
        <div class="page">
          <t t-foreach="docs" t-as="template">

            <t t-set="var" t-value="template.product_variant_ids and template.product_variant_ids[0] or False"/>

            <!-- NUEVO: Barcode reducido -->
            <t t-if="var and var.barcode">
              <t t-set="barcode_short" t-value="var.barcode[:7]"/>
            </t>

            <div style="
                width:75.95mm;
                height:12mm;
                border:1px solid #000;
                padding:1mm;
                text-align:center;
                font-family:Arial, sans-serif;
                box-sizing:border-box;
                page-break-inside:avoid;
            ">

              <t t-if="var and var.barcode">

                <!-- Referencia interna -->
                <div style="font-size:8px; font-weight:bold; margin-bottom:1mm;">
                  <t t-esc="var.default_code or ''"/>
                </div>

                <!-- Código de barras gráfico (manual pero igual al widget) -->
                <img t-att-src="'/report/barcode/Code128/%s?width=260&amp;height=60&amp;humanreadable=0' % (barcode_short)"
                     style="width:65mm; height:6mm; display:block; margin:0 auto;"/>

                <!-- Número debajo -->
                <div style="font-size:6px; margin-top:-0.5mm;">
                  <t t-esc="barcode_short"/>
                </div>

                <!-- Precio -->
                <div t-if="var.lst_price" style="font-size:8px; font-weight:bold; margin-top:1mm;">
                  <t t-esc="'$ {:,.0f}'.format(var.lst_price).replace(',', '.')"/>
                </div>

              </t>

            </div>

          </t>
        </div>
      </t>
    </template>

  </data>
</odoo>
