<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Acción del reporte -->
    <record id="action_report_product_label_ring" model="ir.actions.report">
      <field name="name">Etiqueta Anillo 80x10mm</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_ring</field>
      <field name="report_file">product_label_printer.report_product_label_ring</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Plantilla 80 x 10 mm -->
    <template id="report_product_label_ring">
      <t t-call="web.html_container">
        <div class="page">
          <t t-foreach="docs" t-as="template">
            <t t-set="var" t-value="template.product_variant_ids and template.product_variant_ids[0] or False"/>
            
            <!-- Crear código corto (primeros 7 dígitos) si existe -->
            <t t-if="var and var.barcode">
              <t t-set="barcode_final" t-value="var.barcode[:7]"/>
            </t>
            
            <div style="
                width:80mm;
                height:10mm;
                box-sizing:border-box;
                display:block;
                margin:0 0 2mm 0;
                border:1px solid #000;
                text-align:center;
                padding:0.5mm;
                font-family:Arial, sans-serif;
                page-break-inside:avoid;
                overflow:hidden;
              ">
              
              <t t-if="barcode_final">
              
                <!-- Código interno -->
                <div style="font-size:6.5px; font-weight:bold; margin-bottom:0.8mm;">
                  <t t-esc="var.default_code or ''"/>
                </div>

                <!-- Código de barras gráfico (widget) -->
                <div style="margin-bottom:0.3mm;">
                  <span t-field="barcode_final"
                        t-options="{
                          'widget': 'barcode',
                          'symbology': 'Code128',
                          'img_style': 'width:72mm; height:5mm; display:block; margin:0 auto;'
                        }"/>
                </div>

                <!-- Número debajo -->
                <div style="font-size:5.5px; margin-top:-0.8mm;">
                  <t t-esc="barcode_final"/>
                </div>

                <!-- Precio -->
                <div t-if="var.lst_price" style="font-size:7px; font-weight:bold; margin-top:0.8mm;">
                  <t t-esc="'$ {:,.0f}'.format(var.lst_price).replace(',', '.')"/>
                </div>

              </t>
              
            </div>
          </t>
        </div>
      </t>
    </template>
  </data>
</odoo>
