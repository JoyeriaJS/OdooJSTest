<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Acción ligada a product.template -->
    <record id="action_report_product_label_2x2" model="ir.actions.report">
      <field name="name">Etiquetas 2×2 cm</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_2x2</field>
      <field name="report_file">product_label_printer.report_product_label_2x2</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Plantilla QWeb 2×2 cm con nombre, Code128 y numeración -->
    <template id="report_product_label_2x2">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="template">
          <!-- Primera variante para campo real -->
          <t t-set="var" t-value="template.product_variant_ids and template.product_variant_ids[0] or False"/>

          <!-- Forzar código de barras base original -->
          <t t-set="barcode_value" t-value="template.barcode or (var and var.barcode and var.barcode.split('0')[0])"/>

          <div style="
              width:2cm;
              height:2cm;
              box-sizing:border-box;
              display:inline-block;
              margin:1mm;
              border:1px solid #000;
              text-align:center;
              padding:2px;
              position:relative;
              page-break-inside:avoid;
            ">
            <t t-if="barcode_value">
              <!-- Nombre del producto arriba -->
              <div style="font-size:6px; line-height:1em; margin-bottom:2px; overflow:hidden; white-space:nowrap; text-overflow:ellipsis;">
                <t t-esc="template.default_code"/>
              </div>

              <!-- Código de barras Code128 (sin tocar, mantiene gráfico funcional) -->
              <span t-field="var.barcode"
                    t-options="{
                      'widget': 'barcode',
                      'symbology': 'Code128',
                      'img_style': 'width:100%; height:50%'
                    }"/>

              <!-- Número debajo (usa código base sin extensión) -->
              <div style="
                  font-size:6px;
                  line-height:1em;
                  position:absolute;
                  bottom:12px;
                  width:100%;
                  text-align:center;
                ">
                <t t-esc="barcode_value"/>
              </div>

              <!-- Precio debajo (sin decimales, formato CLP) -->
              <div style="
                  font-size:6px;
                  line-height:1em;
                  position:absolute;
                  bottom:2px;
                  width:100%;
                  text-align:center;
                ">
                $<t t-esc="'{:,.0f}'.format(template.list_price).replace(',', '.')"/>
              </div>
            </t>
          </div>
        </t>
      </t>
    </template>

  </data>
</odoo>
