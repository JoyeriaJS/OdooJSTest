<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Acción ligada a product.template -->
    <record id="action_report_product_label_2x2" model="ir.actions.report">
      <field name="name">Etiquetas 2×2 cm</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_label_printer.report_product_label_2x2</field>
      <field name="report_file">product_label_printer.report_product_label_2x2</field>
      <field name="binding_model_id" ref="product.model_product_template"/>
      <field name="binding_type">report</field>
    </record>

    <!-- Plantilla QWeb 2×2 cm -->
    <template id="report_product_label_2x2">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="template">
          <t t-set="var" t-value="template.product_variant_ids and template.product_variant_ids[0] or False"/>
          <t t-set="barcode_value" t-value="var and (var.barcode or var.default_code)"/>

          <div style="
              width:2cm;
              height:2cm;
              box-sizing:border-box;
              display:inline-block;
              margin:1mm;
              border:1px solid #000;
              text-align:center;
              padding:1px;
              position:relative;
              page-break-inside:avoid;
            ">
            <t t-if="barcode_value">
              <!-- Código interno -->
              <div style="font-size:6px; line-height:1em; margin-bottom:1px; overflow:hidden; white-space:nowrap; text-overflow:ellipsis;">
                <t t-esc="template.default_code"/>
              </div>

              <!-- Código de barras (imagen segura) -->
              <t t-set="barcode_url" t-value="'/report/barcode/?type=Code128&amp;value=%s&amp;width=250&amp;height=50' % barcode_value"/>
              <img t-att-src="barcode_url"
                   style="width:95%; height:auto; display:block; margin:0 auto;"/>

              <!-- Número debajo del código -->
              <div style="
                  font-size:6px;
                  line-height:1em;
                  margin-top:1px;
                  width:100%;
                  text-align:center;
                ">
                <t t-esc="barcode_value"/>
              </div>

              <!-- Precio sin decimales -->
              <div style="
                  font-size:6px;
                  line-height:1em;
                  position:absolute;
                  bottom:2px;
                  width:100%;
                  text-align:center;
                ">
                $<t t-esc="'{:,.0f}'.format(template.list_price).replace(',', '.')"/>
              </div>
            </t>
          </div>
        </t>
      </t>
    </template>

  </data>
</odoo>
