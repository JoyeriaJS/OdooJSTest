<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_non_inventory_product_tree" model="ir.ui.view">
        <field name="name">non.inventory.product.tree</field>
        <field name="model">joyeria.non_inventory_product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="fecha"/>
                <field name="descripcion"/>
                <field name="peso"/>
                <field name="metal"/>
                <field name="sucursal_id"/>
                <field name="estado"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="view_non_inventory_product_form" model="ir.ui.view">
        <field name="name">non.inventory.product.form</field>
        <field name="model">joyeria.non_inventory_product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <field name="fecha" readonly="1"/>
                        <field name="user_id" readonly="1"/>
                        <field name="estado"/>
                    </group>

                    <group>
                        <field name="descripcion"/>
                        <field name="codigo_interno"/>
                    </group>

                    <group>
                        <field name="peso"/>
                        <field name="metal"/>
                        <field name="sucursal_id"/>
                    </group>

                    <notebook>
                        <page string="Foto">
                            <field name="foto" widget="image"/>
                        </page>

                        <page string="Observaciones">
                            <field name="observaciones"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
